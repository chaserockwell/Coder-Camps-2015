@model IEnumerable<KidChores.Data.Models.Kid>

@{
    ViewBag.Title = "Index";
}

<div class="index-body">
    <div class="panel">
        <div class="panel-heading">
            <div>
                <h2 class="header">Kids</h2>
            </div>
            <div class="md-col-10">
                @Html.ActionLink("< Chores", "Index", "Chores")
                @Html.ActionLink("New Chore", "Create", "Chores", null, new { @class = "btn btn-default index-left-btn" })
                @Html.ActionLink("New Kid", "Create", "Kids", null, new { @class = "btn btn-default index-center-btn" })
                @Html.ActionLink("Assign Chore", "Create", "KidChores", null, new { @class = "btn btn-default index-right-btn" })
                @Html.ActionLink("Home >", "Index", "KidChores")
            </div>
        </div>
        <hr style="width: 75%" />
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.KidId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.KidId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
